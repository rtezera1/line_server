source 'https://rubygems.org'

# automatically reload web server during development
gem 'shotgun'
# micro-framework
gem 'sinatra'
# web server
gem 'thin'

group :test, :development do
  # framework for writing tests
  gem 'rspec'
  # to run high speed, parallel http requests
  gem 'typhoeus'
  # enforces ruby style guidelines
  gem 'rubocop', require: false
  # debugging
  gem 'pry'
end
